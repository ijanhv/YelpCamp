<% layout('layouts/boilerplate')%> 

<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" id="title" type="text" name="campground[title]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" id="location" type="text" name="campground[location]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
           
            

            <!-- <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" id="image" type="text" name="campground[image]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div> -->

            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
            <div class="input-group">
                <span class="input-group-text" id="price-label">$</span>
                <input type="text" class="form-control" id="price" name="campground[price]" required placeholder="0.00" aria-label="price" aria-describedby="price-label">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" id="description" type="text" name="campground[description]" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-4">
                <div class="custom-file"></div>
                <label for="image" class="form-label"><span>Upload Images</span></label>
                <input class="form-control" type="file" id="image" name="image" multiple>
              </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Campground</button>

            </div>
        </form>
        <a href="/campgrounds">All Campgrounds</a>
    
    </div>
</div>
